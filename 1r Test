import cv2
import numpy as np

# Iniciar la captura de video
cap = cv2.VideoCapture(1)  # Cambia a 1 o 2 si tienes varias c치maras

while True:
    ret, frame = cap.read()
    if not ret:
        print("No se pudo leer el fotograma")
        break

    # Convertir la imagen de BGR a HSV
    hsv = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)
    
    center_array = []

    # 游늷 Definir los rangos de color en HSV
    ## Verde
    lower_green = np.array([35, 50, 50])
    upper_green = np.array([85, 255, 255])

    ## Rojo (dos rangos porque el rojo est치 en los extremos del espectro HSV)
    
    lower_red2 = np.array([170, 120, 70])
    upper_red2 = np.array([180, 255, 255])

    # 游늷 Crear m치scaras para filtrar los colores
    mask_green = cv2.inRange(hsv, lower_green, upper_green)
    mask_red = cv2.inRange(hsv, lower_red2, upper_red2)

    # 游늷 Aplicar operaciones morfol칩gicas para eliminar ruido
    mask_green = cv2.erode(mask_green, None, iterations=2)
    mask_green = cv2.dilate(mask_green, None, iterations=2)

    mask_red = cv2.erode(mask_red, None, iterations=2)
    mask_red = cv2.dilate(mask_red, None, iterations=2)

    # 游늷 Encontrar contornos de cada color
    contours_green, _ = cv2.findContours(mask_green, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
    contours_red, _ = cv2.findContours(mask_red, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)

    for contour in contours_green:
        M = cv2.moments(contour)
        if M["m00"] != 0:
            cX = int(M["m10"] / M["m00"])
            cY = int(M["m01"] / M["m00"])

            cv2.circle(frame, (cX, cY), 7, (255, 0, 0), -1)

            center_array.append((cX, cY))


    # 游늷 Dibujar los contornos en la imagen original
    for contour in contours_green:
        if cv2.contourArea(contour) > 1000:  # Filtrar objetos peque침os
            x, y, w, h = cv2.boundingRect(contour)
            cv2.rectangle(frame, (x, y), (x + w, y + h), (0, 255, 0), 3)  # Verde

    for contour in contours_red:
        if cv2.contourArea(contour) > 700:
            x, y, w, h = cv2.boundingRect(contour)
            cv2.rectangle(frame, (x, y), (x + w, y + h), (0, 0, 255), 3)  # Rojo

    if len(center_array) > 1:
        for i in range(len(center_array) - 1):
            cv2.line(frame, center_array[i], center_array[i+1], (0, 0, 255), 4)



    # 游늷 Mostrar la imagen con los objetos detectados
    cv2.imshow('Detecci칩n de Verde y Rojo', frame)

    # 游늷 Mostrar las m치scaras (opcional)
    cv2.imshow('M치scara Verde', mask_green)
    #cv2.imshow('M치scara Roja', mask_red)

    # 游늷 Salir con la tecla 'q'
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Liberar recursos
cap.release()
cv2.destroyAllWindows()
